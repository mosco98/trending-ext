{
  "name": "Trending",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Get updates of trending topics on twitter in your location without visiting the twitter official page",
  "homepage_url": "https://trending.netlify.app",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_popup": "./popup/index.html"
  },

  "permissions": ["geolocation", "storage", "tabs"],
  "content_security_policy": "script-src 'self' 'sha256-p2EdDQS1ZzBmo0ng9n7lMBTF1fkvbzOEWZ9EYrqtbzY='; object-src 'self'"
}
